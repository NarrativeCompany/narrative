    <function>
        <description><![CDATA[
            Get an ImageDimensions object for a given FileMetaDataProvider and ImageType.
        ]]></description>
        <name>imageDimensions</name>
        <function-class>org.narrative.network.shared.util.NetworkCoreUtils</function-class>
